<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/fragment_category_list_view_parent_layout"
    android:background="@color/default_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/fragment_category_list_view_inner_layout"
        android:background="@color/default_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_height="60dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:id="@+id/fragment_category_list_view_category"
            android:text="@string/fragment_category_list_view_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="0.4"/>



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:id="@+id/fragment_category_list_view_quantity"
            android:text="@string/fragment_category_list_view_quantity"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/fragment_category_list_view_edit"
            android:id="@+id/fragment_category_list_view_edit"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/ripple_effect"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:padding="5dp"
            android:textSize="16sp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/fragment_category_list_view_arraw_right"
            android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>
