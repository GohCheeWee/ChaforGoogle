<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:minHeight="1200dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:orientation="horizontal"
        android:id="@+id/fragment_sub_category_take_action_dialog_action_bar"
        android:layout_height="?actionBarSize">

        <com.jby.chaforgoogle.others.SquareHeightLinearLayout
            android:layout_width="match_parent"
            android:id="@+id/fragment_sub_category_take_action_dialog_back_button"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/actionbar_back_icon"/>

        </com.jby.chaforgoogle.others.SquareHeightLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/fragment_sub_category_take_action_title"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_sub_category_take_action_dialog_action_bar"
        android:id="@+id/fragment_sub_category_take_action_dialog_list_view"/>


</RelativeLayout>
