<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_category_list_view_parent_layout"
    android:background="@color/default_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/fragment_sub_category_list_view_inner_layout"
        android:background="@color/default_background"
        android:layout_height="?actionBarSize">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="10"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/fragment_sub_category_list_view_no"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="8852023664101"
            android:id="@+id/fragment_sub_category_list_view_barcode"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="10"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/fragment_sub_category_list_view_quantity"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="12/5/2017"
            android:textColor="#000000"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/fragment_sub_category_list_view_date"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="4:47 PM"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/fragment_sub_category_list_view_time"/>
    </LinearLayout>

</LinearLayout>
