<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.jby.stocktake.login.ForgotPasswordFragment">

    <ImageView
        android:layout_width="50dp"
        android:padding="15dp"
        android:id="@+id/fragment_forgot_password_back_button"
        android:src="@drawable/back_button_icon"
        android:contentDescription="@string/fragment_register_back_button"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/fragment_forgot_password_layout_enter_email"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="@string/fragment_forgot_passoword_label_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="@string/fragment_forgot_password_hint"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:labelFor="@id/fragment_forgot_email"
        android:inputType="textEmailAddress"
        android:id="@+id/fragment_forgot_email"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/fragment_forgot_password_paragraph"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/fragment_forgot_password_button_send"
            android:text="@string/fragment_forgot_password_label_send"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/fragment_forgot_password_layout_enter_code"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="@string/fragment_forgot_password_label_verify_code"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="@string/fragment_forgot_password_hint_code"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:labelFor="@id/fragment_forgot_verify_code"
            android:inputType="number"
            android:id="@+id/fragment_forgot_verify_code"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/fragment_forgot_password_button_confirm"
            android:text="@string/fragment_forgot_password_label_confirm"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="@string/label_copyright"/>

    </RelativeLayout>

</LinearLayout>
